@model IEnumerable<MVCBookStore.Models.SACH>
    
<style type="text/css">
       #Datmua a{
           clear :both;
           background-color:red;
           color:white;
           width:120px;
           height:35px;
           display:block;
           float:right;
           text-align:center;
           padding-top:10px;
           text-decoration:none;
           font-weight:bold;

       }

       #Datmua a:hover{
           background-color:gray;
           color:red;
       }
</style>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Thông tin chi tiết sách</h2>
@foreach (var sach in Model)
{
    <div style="width:40%; float:left; border-left:dotted 1px; border-color:azure">
        <img src="~/Hinhminhhoa/@sach.Hinhminhhoa" width="100"/>
    </div>
    <div style="width:60%; float:left;padding:10px">
        <h4 style="font-weight:bold; color:red;"> Tên sách : @sach.Tensach</h4>
        <p style="text-align:justify"><span style="font-weight:bold">Mô tả :</span>@sach.Mota</p>
        <p style="font-weight:bold">Giá bán : <span style="color:red;font-size:16pt">@sach.Dongia VND</span></p>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("ThemGiohang","Giohang",new {@iMasach=sach.Masach,@strURL=Request.Url.ToString()})" class="list-group-item"> Đặt mua    </a>
           
        </div>
    </div>
}
